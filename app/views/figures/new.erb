<h2>Create a new Figure</h2>

<form action="/figures" method="POST">
  <label>Name</label>
    <input type="text" name='figure[name]'>
      <br><br>

  <label><h3>Title(s)</h3></label>
    <% Title.all.each do |title| %>
      <input type='checkbox' name='figure[title_ids][]' value='<%=title.id%>'><%=title.name%>
      <br>
    <%end%>

  <h3>Create a new Title:</h3>
    <input type='text' name='figure[title]'>

  <h3>Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
      <input type='checkbox' name='figure[landmark_ids][]' value='<%=landmark.id%>'>
      <%=landmark.name%>
      <br>
    <%end%>

  <h3>Create New Landmark:</h3>
    <label>Name:</label>
      <input type='text' name='figure[landmark][name]'>
    <label>Year:</label>
      <input type='integer' name='figure[landmark][year]'>
  <br><br>
  <input type="submit" value="Create">
</form>
